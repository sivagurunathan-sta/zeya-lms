# Backend environment variables
NODE_ENV=development
PORT=5000

# JWT
JWT_SECRET=change-this-secret
JWT_REFRESH_SECRET=

# Database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=student_lms

# Frontend URL (for CORS/email links)
FRONTEND_URL=http://localhost:3000

# SMTP (optional; if unset, email falls back to JSON transport in dev)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM_NAME=Student LMS

# AWS (optional; required if S3 uploads are used)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Razorpay (optional; required if payments are used)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
